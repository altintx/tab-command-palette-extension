{
  "manifest_version": 3,
  "name": "Tab Command Palette",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "scripting",
    "background"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"]
    }
  ],
  "commands": {
    "trigger-tab-list": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Open tab command palette"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "dist/assets/src/assets/icon16.png",
      "48": "dist/assets/src/assets/icon48.png",
      "128": "dist/assets/src/assets/icon128.png"
    }
  },
  "icons": {
    "16": "dist/assets/src/assets/icon16.png",
    "48": "dist/assets/src/assets/icon48.png",
    "128": "dist/assets/src/assets/icon128.png"
  }
}