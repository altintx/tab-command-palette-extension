{
  "manifest_version": 3,
  "name": "Tab Manager",
  "version": "1.0",
  "permissions": [
    "tabs",
    "bookmarks"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "commands": {
    "trigger-tab-list": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Open tab list and manage tabs"
    }
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "dist/assets/icon16.png",
      "48": "dist/assets/icon48.png",
      "128": "dist/assets/icon128.png"
    }
  },
  "icons": {
    "16": "dist/assets/icon16.png",
    "48": "dist/assets/icon48.png",
    "128": "dist/assets/icon128.png"
  }
}