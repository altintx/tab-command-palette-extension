{
  "manifest_version": 3,
  "name": ">",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "scripting",
    "background",
    "storage",
    "history"
  ],
  "omnibox": {
    "keyword": ">" 
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"]
    }
  ],
    "icons": {
    "16": "dist/assets/src/assets/icon16.png",
    "48": "dist/assets/src/assets/icon48.png",
    "128": "dist/assets/src/assets/icon128.png"
  }
}